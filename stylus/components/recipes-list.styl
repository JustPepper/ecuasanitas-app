.recipes-list
    margin 26px 0
    .recipes-list-header
        background-color $blue
        color white
        .grid-col:first-child
            border-right 1px solid white
    .recipes-list-content
        background-color white
        margin-top 10px
        box-shadow 0px 1px 2px rgba(black, .2)
        .track
            background-color #D8D8D8
            border none
        .handle
            background-color #EF355E
        .recipes-grid:last-child
            margin-bottom 0
        .grid-col
            border-bottom 1px solid #D8D8D8
        .grid-col:first-child
            border-right 1px solid #D8D8D8

        .toggle input:checked + .track .handle
            background-color #6BA9AA

        .toggle.toggle-assertive input:checked + .track
            background-color #D8D8D8
            border-color #D8D8D8

.recipes-grid
    display flex
    justify-content space-between
    .grid-col
        padding 12px
        display flex
        align-items center
        .icon
            font-size 20px
    .grid-col:first-child
        width 70%
        justify-content space-between
    .grid-col:last-child
        width 30%
        justify-content center
